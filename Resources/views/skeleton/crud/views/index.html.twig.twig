                '3': {'column' : 5, 'title-start': 'date min arc. ', 'title-end': 'date max arc.', 'right':'190', 'width':'183', 'format' : 'yy-mm-dd', 'idMin':'mina', 'idMax':'maxa'},
            },			
			'grid-filters-select': ['0','1','2','3','4','5','6'],
