{{ "{% if app.request.query.get('NoLayout') %}" }}
	{{ "{% set layout_nav = getParameter('sfynx.template.theme.layout.ajax') %}" }}
{{ "{% else %}" }}
	{{ "{% set layout_nav = app.request.attributes.get('sfynx-layout') %}" }}
{{ "{% endif %}" }}	
{{ "{% extends layout_nav %}" }}

{{ "{% block title %}" }}
{{ "{% endblock %}" }}
	
{{ "{% block content %}" }}

    {{ '{{ parent() }}' }}

	<table class="grid_show">
		<caption>{{ entity }}</caption>
	    <tbody>
	    {%- for field, metadata in fields %}
	
	        <tr>
	            <th>{{ field|capitalize }}</th>
	
	        {%- if metadata.type in ['date', 'datetime'] %}
	
	            <td>{{ '{{ entity.'~ field|replace({'_': ''}) ~'|date(\'Y-m-d H:i:s\') }}' }}</td>

	        {%- elseif field in ['heritage'] %}

	        	<td>{{ '{{ entity.'~ field|replace({'_': ''}) ~'|print_r }}'|raw }}</td>	            
	
	        {%- else %}
	
	            <td>{{ '{{ entity.'~ field|replace({'_': ''}) ~' }}'|raw }}</td>

	        {%- endif %}
	
	        </tr>
	
	    {%- endfor %}
	
	    </tbody>
	</table>

	{{ "{% if is_granted('ROLE_EDITOR') %}" }}
	
		{% set hide_edit, hide_delete = false, false %}
		{% include 'views/others/record_actions.html.twig.twig' %}
	
	{{ "{% endif %}" }}		
		
{{ "{% endblock %}" }}